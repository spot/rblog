<% form_for :user, :url => {:action => 'forgot_password'} do |form| %>
    <fieldset>
	<legend>Password Reset Request</legend>
	    <p>Your password is encrypted in our database, so we don't know what it is. Enter your email address that we have on our file, we will send you a password reset link email to your email address.</p>
        <p>
            <label for="user_email" >Email Address:</label><br/>
            <%= form.text_field :email, :size => 35, :class => 'text' %>
        </p>
        <%= submit_tag 'Send' %>
    </fieldset>
<% end %>